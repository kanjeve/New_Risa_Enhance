{
    "comments": {
        "blockComment": [ "/*", "*/" ],
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["/*", "*/"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],

    "indent": {
        "autoIndent": true 
    },

    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}]*$",
        "decreaseIndentPattern": "^((?!.*\\/\\*).*\\*\\/.*|[^{\\[(\\.]$)|^.*\\}.*|^\\]|^\\).*"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*\\/\\*.*$",
            "afterText": "^\\s*\\*\\/.*$", 
            "action": {
                "indent": "none",
                "indentAction": "none",
                "appendText": " * " 
            }
        },
        {
            "beforeText": "^\\s*\\*.*$", 
            "afterText": "^.*[^\\*\\/]$", 
            "action": {
                "indent": "none",
                "indentAction": "none",
                "appendText": "* "
            }
        }
    ]
}